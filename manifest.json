{
  "manifest_version": 3,
  "name": "AnnoyMyselfYouTube",
  "version": "1.1",
  "description": "Make YouTube inconvenient: grayscale screen, fewer videos, no related sidebar",
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
